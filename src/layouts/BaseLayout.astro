---
interface Props {
  title: string;
  description?: string;
  forceLight?: boolean;
}

const { title, description = "A better way to think, create, and bring your ideas to life.", forceLight = false } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme={forceLight ? "light" : undefined}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Syne:wght@400;500;600;700;800&family=DM+Sans:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://api.fontshare.com/v2/css?f[]=satoshi@400,500,600,700&display=swap"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import "../index.css";
</style>

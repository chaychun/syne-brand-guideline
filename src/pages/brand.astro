---
import BrandLayout from "../layouts/BrandLayout.astro";
import HeroSection from "../components/HeroSection.astro";
import DesignPrinciplesSection from "../components/DesignPrinciplesSection.astro";
import TypographySection from "../components/TypographySection.astro";
import ColorSection from "../components/ColorSection.astro";
import GradientSection from "../components/GradientSection.astro";
import SpacingSection from "../components/SpacingSection.astro";
import FooterSection from "../components/FooterSection.astro";

// Complex sections with icons kept as React islands
import GlassCardIsland from "../components/islands/GlassCardIsland";
import ComponentsIsland from "../components/islands/ComponentsIsland";
import LogoIsland from "../components/islands/LogoIsland";
import IconsIsland from "../components/islands/IconsIsland";
import MobileUIIsland from "../components/islands/MobileUIIsland";
---

<BrandLayout title="Syne Brand Guideline">
  <HeroSection />

  <div class="mx-auto max-w-[960px] px-5 pb-30 pt-10 sm:px-8 md:px-12 md:pt-16">
    <!-- Design Principles (Astro) -->
    <DesignPrinciplesSection />

    <!-- Typography (Astro) -->
    <TypographySection />

    <!-- Colors (Astro) -->
    <ColorSection />

    <!-- Gradients (Astro) -->
    <GradientSection />

    <!-- Glass Card (React island - uses icons) -->
    <GlassCardIsland client:load />

    <!-- Components (React island - uses theme) -->
    <ComponentsIsland client:load />

    <!-- Spacing (Astro) -->
    <SpacingSection />

    <!-- Logo (React island - uses React Logo component) -->
    <LogoIsland client:load />

    <!-- Icons (React island - uses Phosphor icons) -->
    <IconsIsland client:load />

    <!-- Mobile UI (React island - complex) -->
    <MobileUIIsland client:load />

    <!-- Footer (Astro) -->
    <FooterSection />
  </div>
</BrandLayout>

---
interface Props {
  bg?: string;
  class?: string;
}

const { bg, class: className = "" } = Astro.props;
---

<div class={`phone-frame relative flex h-[694px] w-[320px] shrink-0 flex-col overflow-hidden rounded-[44px] shadow-xl ${className}`} style={bg ? `background: ${bg}` : undefined}>
  <!-- Dynamic Island -->
  <div class="absolute left-1/2 top-3 z-10 h-[30px] w-[105px] -translate-x-1/2 rounded-[20px] bg-black"></div>

  <!-- Status bar -->
  <div class="relative z-[5] flex items-center justify-between px-7 pt-4">
    <span class="font-body text-[13px] font-semibold text-theme-fg">9:41</span>
    <span class="font-body text-[13px] tracking-wide text-theme-fg opacity-70">...</span>
  </div>

  <!-- Content -->
  <div class="relative flex-1 overflow-y-auto pt-4">
    <slot />
  </div>

  <!-- Home indicator -->
  <div class="home-indicator absolute bottom-2.5 left-1/2 h-[5px] w-[134px] -translate-x-1/2 rounded-full opacity-25"></div>
</div>

<style>
  .phone-frame {
    background: var(--theme-bg);
    border: 3px solid var(--color-neutral-900);
  }
  :global([data-theme="dark"]) .phone-frame {
    border-color: #000;
  }

  .home-indicator {
    background: var(--theme-fg);
  }
</style>

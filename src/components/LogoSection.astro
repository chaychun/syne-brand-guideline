---
import Section from "./Section.astro";
import Logo from "./Logo.astro";
import Logomark from "./Logomark.astro";

// Sunset gradient (same for light and dark)
const sunsetColors = [
  "#0F0E0C", "#1C1A17", "#33302A", "#6B3410", "#8F4513", "#B85A18", "#E07020",
  "#F28C3E", "#FFA55E", "#FFC087", "#FFD8B0", "#FFEDD9", "#FAF9F7", "#FFFFFF",
];
const sunsetStops = [0, 8, 16, 26, 36, 46, 54, 60, 66, 72, 78, 84, 92, 100];
const gradientSunset = `linear-gradient(180deg, ${sunsetColors.map((c, i) => `${c} ${sunsetStops[i]}%`).join(", ")})`;
---

<!-- Logo Usage -->
<Section
  title="Logo"
  subtitle="The Syne wordmark combines the logomark with custom typography. Use consistently across all touchpoints."
>
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
    <!-- Light background -->
    <div class="flex h-[120px] items-center justify-center rounded-xl border border-[rgba(0,0,0,0.08)] bg-[#FAF9F7] sm:h-[140px]">
      <Logo width={120} class="text-[#1E1C1A]" />
    </div>

    <!-- Dark background -->
    <div class="flex h-[120px] items-center justify-center rounded-xl bg-[#1E1C1A] sm:h-[140px]">
      <Logo width={120} class="text-[#FAF9F7]" />
    </div>

    <!-- Gradient background - warm (uses theme-aware sunrise) -->
    <div class="logo-gradient-sunrise flex h-[120px] items-center justify-center rounded-xl sm:h-[140px]">
      <Logo width={120} class="text-[#1E1C1A]" />
    </div>

    <!-- Gradient background - sunset (static, same in both modes) -->
    <div class="flex h-[120px] items-center justify-center rounded-xl sm:h-[140px]" style={`background: ${gradientSunset}`}>
      <Logo width={120} class="text-[#FAF9F7]" />
    </div>
  </div>

  <!-- Usage notes -->
  <div class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-3">
    <div class="usage-note rounded-lg p-4">
      <div class="mb-1 font-mono text-[11px] font-medium uppercase tracking-wider opacity-50">
        Clear Space
      </div>
      <p class="text-body-sm m-0 leading-relaxed text-theme-fg-secondary">
        Maintain padding equal to the height of the "S" around the logo.
      </p>
    </div>
    <div class="usage-note rounded-lg p-4">
      <div class="mb-1 font-mono text-[11px] font-medium uppercase tracking-wider opacity-50">
        Minimum Size
      </div>
      <p class="text-body-sm m-0 leading-relaxed text-theme-fg-secondary">
        Print: 20mm wide. Digital: 80px wide for legibility.
      </p>
    </div>
    <div class="usage-note rounded-lg p-4">
      <div class="mb-1 font-mono text-[11px] font-medium uppercase tracking-wider opacity-50">
        Color Modes
      </div>
      <p class="text-body-sm m-0 leading-relaxed text-theme-fg-secondary">
        Use dark on light backgrounds, light on dark. Never use brand colors on the logo.
      </p>
    </div>
  </div>
</Section>

<!-- Logomark -->
<Section
  title="Logomark"
  subtitle="The standalone mark for compact spaces, favicons, and app icons. Features an open loop design representing connection and flow."
>
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-4">
    <!-- Light background -->
    <div class="flex h-[100px] items-center justify-center rounded-xl border border-[rgba(0,0,0,0.08)] bg-[#FAF9F7] sm:h-[120px]">
      <Logomark width={48} class="text-[#1E1C1A]" />
    </div>

    <!-- Dark background -->
    <div class="flex h-[100px] items-center justify-center rounded-xl bg-[#1E1C1A] sm:h-[120px]">
      <Logomark width={48} class="text-[#FAF9F7]" />
    </div>

    <!-- Primary color background -->
    <div class="flex h-[100px] items-center justify-center rounded-xl bg-[#F28C3E] sm:h-[120px]">
      <Logomark width={48} class="text-[#1E1C1A]" />
    </div>

    <!-- Teal background -->
    <div class="flex h-[100px] items-center justify-center rounded-xl bg-[#5E9499] sm:h-[120px]">
      <Logomark width={48} class="text-[#FAF9F7]" />
    </div>
  </div>

  <!-- Logomark vs Logo comparison -->
  <div class="mt-6">
    <div class="text-overline mb-2 text-theme-fg-secondary">
      Design Difference
    </div>
    <div class="comparison-box flex flex-col gap-6 rounded-xl p-5 sm:flex-row sm:items-center sm:gap-8 sm:p-6">
      <div class="flex items-center justify-center gap-6 sm:gap-8">
        <div class="flex flex-col items-center gap-3">
          <Logomark width={56} class="text-theme-fg" />
          <span class="font-mono text-[10px] uppercase tracking-wider opacity-50">
            Logomark
          </span>
        </div>
        <div class="divider h-16 w-px"></div>
        <div class="flex flex-col items-center gap-3">
          <Logo width={140} class="text-theme-fg" />
          <span class="font-mono text-[10px] uppercase tracking-wider opacity-50">
            Full Logo
          </span>
        </div>
      </div>
      <div class="hidden h-16 w-px sm:block divider"></div>
      <div class="text-body-sm flex-1 leading-relaxed text-theme-fg-secondary">
        The logomark features an{" "}
        <strong class="text-theme-fg">open loop at the bottom right</strong>, representing
        continuous connection and flow. The full logo closes this loop, creating a complete
        wordmark that emphasizes stability and identity.
      </div>
    </div>
  </div>

  <!-- Size examples -->
  <div class="mt-6">
    <div class="text-overline mb-2 text-theme-fg-secondary">
      Common Sizes
    </div>
    <div class="flex flex-wrap items-end gap-4 sm:gap-6">
      {[16, 24, 32, 48, 64].map((size) => (
        <div class="flex flex-col items-center gap-2">
          <div
            class="size-box flex items-center justify-center rounded-lg"
            style={`width: ${size + 16}px; height: ${size + 16}px`}
          >
            <Logomark width={size} class="text-theme-fg" />
          </div>
          <span class="font-mono text-[10px] opacity-50">{size}px</span>
        </div>
      ))}
    </div>
  </div>
</Section>

<style>
  .logo-gradient-sunrise {
    background: var(--gradient-sunrise);
  }

  .usage-note {
    background: rgba(0, 0, 0, 0.03);
  }
  :global([data-theme="dark"]) .usage-note {
    background: rgba(255, 255, 255, 0.05);
  }

  .comparison-box {
    background: rgba(0, 0, 0, 0.03);
  }
  :global([data-theme="dark"]) .comparison-box {
    background: rgba(255, 255, 255, 0.05);
  }

  .divider {
    background: var(--theme-border);
  }

  .size-box {
    background: rgba(0, 0, 0, 0.03);
  }
  :global([data-theme="dark"]) .size-box {
    background: rgba(255, 255, 255, 0.05);
  }
</style>

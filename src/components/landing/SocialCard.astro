---
import Icon from "../Icon.astro";
import GlassContainer from "../GlassContainer.astro";

interface Props {
  number: string;
  lines: string[];
  caption: string;
}

const { number, lines, caption } = Astro.props;
---

<GlassContainer>
  <div class="overflow-hidden rounded-xl bg-theme-card-bg">
    <div class="relative h-[140px] bg-neutral-100 dark:bg-neutral-200">
      <div class="flex flex-col justify-center p-4">
        <div class="font-display text-5xl font-bold leading-none text-accent-coral">{number}</div>
        <div class="font-heading text-sm font-bold leading-tight text-neutral-900 dark:text-neutral-800">
          {lines.map((line, i) => (
            <Fragment>
              {line.startsWith("*") && line.endsWith("*") ? (
                <span class="font-extrabold">{line.slice(1, -1)}</span>
              ) : (
                line
              )}
              {i < lines.length - 1 && <br />}
            </Fragment>
          ))}
        </div>
      </div>
      <div class="absolute bottom-2 right-2 flex size-7 items-center justify-center rounded-md bg-neutral-900/80 backdrop-blur-sm dark:bg-neutral-800/80">
        <Icon name="instagram" size={16} class="text-white" />
      </div>
    </div>
    <div class="p-2.5 font-body text-[11px] leading-snug text-theme-fg-secondary">
      {caption}
    </div>
  </div>
</GlassContainer>

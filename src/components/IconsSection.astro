---
import Section from "./Section.astro";
import Icon, { ICON_NAMES } from "./Icon.astro";
---

<Section title="Icons" subtitle="Phosphor icons. Regular weight.">
  <div class="icon-grid-container rounded-xl p-4 sm:p-6">
    <div class="grid grid-cols-4 gap-3 sm:grid-cols-6 sm:gap-4 md:grid-cols-8">
      {ICON_NAMES.map((name) => (
        <div class="flex flex-col items-center gap-1.5 sm:gap-2">
          <div class="icon-box flex size-10 items-center justify-center rounded-xl sm:size-12">
            <Icon name={name} size={24} class="text-theme-fg" />
          </div>
          <span class="max-w-full truncate font-mono text-[8px] text-theme-fg-tertiary sm:text-[9px]">
            {name}
          </span>
        </div>
      ))}
    </div>
  </div>

  <div class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-2">
    <div class="icon-grid-container rounded-xl p-5">
      <div class="text-overline mb-3 text-theme-fg-tertiary">Sizes</div>
      <div class="flex items-end gap-4">
        {[14, 18, 24, 32, 40].map((size) => (
          <div class="flex flex-col items-center gap-1.5">
            <Icon name="sparkle" size={size} class="text-theme-accent" />
            <span class="font-mono text-[9px] text-theme-fg-tertiary">{size}</span>
          </div>
        ))}
      </div>
    </div>

    <div class="icon-grid-container rounded-xl p-5">
      <div class="text-overline mb-3 text-theme-fg-tertiary">In Context</div>
      <div class="flex flex-wrap gap-2">
        <button class="text-body-sm flex cursor-pointer items-center gap-2 rounded-full border-none bg-primary-500 px-4 py-2 font-medium text-white">
          <Icon name="plus" size={16} />
          New Card
        </button>
        <button class="btn-context text-body-sm flex cursor-pointer items-center gap-2 rounded-full border-none px-4 py-2 font-medium">
          <Icon name="search" size={16} />
          Search
        </button>
        <button class="text-body-sm flex cursor-pointer items-center gap-1.5 rounded-full border-none bg-transparent px-3 py-2 font-medium text-theme-accent">
          <Icon name="link" size={16} />
          Connect
        </button>
      </div>
    </div>
  </div>
</Section>

<style>
  .icon-grid-container {
    background: var(--theme-surface);
    border: 1px solid var(--theme-border);
  }

  .icon-box {
    background: var(--theme-input-bg);
  }

  .btn-context {
    color: var(--theme-fg);
    background: var(--theme-input-bg);
  }
</style>

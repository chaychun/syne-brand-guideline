---
import Section from "./Section.astro";

const typeExamples = [
  { font: "display", weight: 600, size: 48, label: "Display / Syne 600", text: "Connections are primary", prominent: true },
  { font: "display", weight: 500, size: 36, label: "Display Alt / Syne 500", text: "Everything is a view", prominent: true },
  { font: "heading", weight: 500, size: 28, label: "H1 / Satoshi 500", text: "Cards, spaces, and the library", prominent: true },
  { font: "heading", weight: 500, size: 22, label: "H2 / Satoshi 500", text: "Pinned connections surface prominently", prominent: true },
  { font: "heading", weight: 500, size: 17, label: "H3 / Satoshi 500", text: "Every card shows its relationships", prominent: true },
  { font: "body", weight: 400, size: 16, label: "Body / DM Sans 400", text: "A card is an anchor point in a network of relationships. When you open any card, you're not viewing the card itself — you're viewing everything connected to it.", prominent: false },
  { font: "body", weight: 400, size: 14, label: "Body Small / DM Sans 400", text: "Created 3 days ago · 12 connections · Design space", prominent: false },
  { font: "mono", weight: 400, size: 13, label: "Mono / JetBrains Mono 400", text: "card.connections.filter(.explicit)", prominent: false },
];

const typeScale = [
  { s: 48, label: "Display", use: "Hero, splash", font: "Syne", w: 600 },
  { s: 36, label: "Display Alt", use: "Large titles", font: "Syne", w: 500 },
  { s: 28, label: "H1", use: "Page titles", font: "Satoshi", w: 500 },
  { s: 22, label: "H2", use: "Section headers", font: "Satoshi", w: 500 },
  { s: 17, label: "H3", use: "Card titles", font: "Satoshi", w: 500 },
  { s: 16, label: "Body", use: "Note content", font: "DM Sans", w: 400 },
  { s: 14, label: "Body Sm", use: "Metadata", font: "DM Sans", w: 400 },
  { s: 12, label: "Caption", use: "Labels", font: "DM Sans", w: 500 },
  { s: 11, label: "Overline", use: "Tags", font: "JetBrains Mono", w: 400 },
];
---

<Section title="Typography" subtitle="Syne for display. Satoshi for headings. DM Sans for body. JetBrains Mono for code.">
  <div class="rounded-xl border border-theme-border bg-theme-surface p-5 sm:p-8 md:p-10">
    {typeExamples.map((item) => (
      <div class="mb-6">
        <div class="mb-1 font-mono text-[10px] uppercase tracking-wide text-theme-fg-tertiary">
          {item.label}
        </div>
        <div
          class:list={[
            item.prominent ? "text-theme-fg" : "text-theme-fg-secondary",
            item.font === "display" && "font-display",
            item.font === "heading" && "font-heading",
            item.font === "body" && "font-body",
            item.font === "mono" && "font-mono",
          ]}
          style={`font-weight: ${item.weight}; font-size: ${item.size}px; line-height: ${item.size > 30 ? 1.15 : 1.5}; letter-spacing: ${item.size > 30 ? "-0.02em" : item.size > 20 ? "-0.01em" : "0"};`}
        >
          {item.text}
        </div>
      </div>
    ))}
  </div>
</Section>

<Section title="Type Scale">
  <div class="rounded-xl border border-theme-border bg-theme-surface p-5 sm:p-6 md:p-8">
    {typeScale.map((item) => (
      <div class="flex flex-col gap-1 border-b border-theme-border-subtle py-3 sm:flex-row sm:items-baseline sm:gap-4">
        <div class="font-mono text-[10px] text-theme-fg-tertiary sm:w-9">
          {item.s}px · {item.font} {item.w}
          <span class="hidden sm:inline"><br /></span>
          <span class="sm:hidden"> · </span>
          <span class="sm:hidden">{item.use}</span>
        </div>
        <div
          class:list={[
            "flex-1 leading-tight text-theme-fg",
            item.font === "Syne" && "font-display",
            item.font === "Satoshi" && "font-heading",
            item.font === "DM Sans" && "font-body",
            item.font === "JetBrains Mono" && "font-mono",
          ]}
          style={`font-weight: ${item.w}; font-size: ${item.s}px; letter-spacing: ${item.s > 24 ? "-0.02em" : "0"};`}
        >
          {item.label}
        </div>
        <div class="hidden text-right font-mono text-[10px] text-theme-fg-tertiary sm:block">
          {item.font} {item.w}<br />{item.use}
        </div>
      </div>
    ))}
  </div>
</Section>

type IconWeight = "thin" | "light" | "regular" | "bold" | "fill" | "duotone";

interface Props {
  name: IconName;
  size?: number | string;
  weight?: IconWeight;
  class?: string;
}

const { name, size = 20, weight = "regular", class: className } = Astro.props;
const IconComponent = ICON_MAP[name];
---

<IconComponent size={size} weight={weight} class={className} />
